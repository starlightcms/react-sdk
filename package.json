{
  "name": "@starlightcms/react-sdk",
  "version": "2.2.0",
  "description": "The Starlight SDK for React",
  "workspaces": [
    "website"
  ],
  "main": "dist/cjs/index.js",
  "exports": {
    ".": {
      "require": "./dist/cjs/index.js",
      "import": "./dist/esm/index.js"
    },
    "./styles.css": "./dist/styles.css"
  },
  "scripts": {
    "build": "rimraf dist && npm run build:cjs && npm run build:esm && npm run build:css",
    "build:cjs": "tsc --module commonjs --outDir dist/cjs",
    "build:esm": "tsc --module esnext --outDir dist/esm",
    "build:css": "sass src/styles.scss dist/styles.css",
    "watch:css": "sass --watch src/styles.scss dist/styles.css",
    "dev": "tsc --watch --module esnext --outDir dist/esm",
    "dev:cjs": "tsc --watch --module commonjs --outDir dist/cjs",
    "docs": "npm start -w website",
    "docs:build": "npm run build -w website",
    "docs:serve": "npm run serve -w website",
    "prepare": "husky install",
    "prepublishOnly": "npm run build",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "files": [
    "dist/**/*"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/starlightcms/react-sdk.git"
  },
  "keywords": [
    "starlight",
    "sdk"
  ],
  "author": "Lucas Varela <hi@lucasvarela.dev>",
  "license": "BSD-3-Clause",
  "bugs": {
    "url": "https://github.com/starlightcms/react-sdk/issues"
  },
  "homepage": "https://github.com/starlightcms/react-sdk#readme",
  "devDependencies": {
    "@types/node": "^16.10.1",
    "@types/react": "^17.0.31",
    "@typescript-eslint/eslint-plugin": "^4.31.2",
    "@typescript-eslint/parser": "^4.31.2",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "husky": "^7.0.2",
    "lint-staged": "^11.1.2",
    "npm-run-all": "^4.1.5",
    "prettier": "2.4.1",
    "rimraf": "^3.0.2",
    "typescript": "^4.4.3"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --cache --fix",
      "prettier --write"
    ]
  },
  "dependencies": {
    "@emotion/react": "^11.10.6",
    "@emotion/styled": "^11.10.6",
    "@starlightcms/js-sdk": "^2.1.0",
    "sass": "^1.69.5"
  },
  "peerDependencies": {
    "react": ">=16.0.0"
  }
}
